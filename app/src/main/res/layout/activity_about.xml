<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="community.rasckspira.akakomapps.AboutActivity">
    <include
        android:id="@+id/tolbar"
        layout="@layout/app_bar"/>
    <ScrollView
        android:layout_below="@+id/tolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="20dp"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="1.34" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorGrayPrimary"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="versi 1.1"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                android:padding="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:text="Aplikasi Akakom App adalah aplikasi mobile client untuk informasi seputar STMIK Akakom Yogyakarta. Memberikan kemudahan kepada mahasiswa/i STMIK Akakom Yogyakarta untuk mendapatkan berita serta info terbaru STMIK Akakom Yogyakarta."
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Dikembangankan Oleh"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center|center_vertical"
                android:layout_weight="1.11" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rackspira"
                android:padding="10dp" />

            <Button
                android:id="@+id/url"
                android:text="Facebook Fanspage RackSpira"
                android:textSize="14sp"
                android:background="@color/colorGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>
            <!--  <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Facebook Fanspage RackSpira"
                   android:textColor="@color/colorGreen"
                   android:textSize="14sp"
                   android:padding="6dp"
                   android:textStyle="bold|italic"
                   android:id="@+id/url" />-->

            <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello@rackspira.community"
                android:textColor="@color/colorGreen"
                android:textSize="18sp"
                android:padding="6dp"
                android:textStyle="bold|italic"
                android:id="@+id/email" />-->


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
