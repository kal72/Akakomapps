<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="community.rasckspira.akakomapps.DetailBeritaActivity">

    <include
        android:id="@+id/tolbar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/berita_judul"
                    android:text="ini judul"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textIsSelectable="false" />
                <TextView
                    android:id="@+id/tgl_detail_berita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21 mei 2016"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <ImageView
                android:id="@+id/foto_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/berita_detail"
                android:text="ini detail"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:layout_gravity="center_vertical" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
