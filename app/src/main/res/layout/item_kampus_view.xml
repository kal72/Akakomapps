<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/cvkampus">

        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorItemRed" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/judul_info"
                android:textSize="14sp"
                android:text="Judul menu"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tgl_info"
                android:layout_below="@id/judul_info"
                android:textSize="10sp"
                android:text="29 mei 2016"
                android:textColor="@color/colorSecondGray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/deskripsi_info"
                    android:layout_below="@id/judul_info"
                    android:maxLines="3"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="deskripi asdkasklj asdjklalsj alksjdalksjd alskjdalksjda aksjdalksjd alsjdalskjd akjsdlaksjdlakjsdlj"
                    android:textColor="#000000" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/foto_info"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>